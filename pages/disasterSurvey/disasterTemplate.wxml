                      <image class="weui-uploader__img" src="{{itemName}}" mode="aspectFill" />
                    </view>
                  </block>
                </view>
                <view class="weui-uploader__input-box" wx:if="{{sdosgImages.length<9}}">
                  <view class="weui-uploader__input" data-disasterindex='{{index}}' bindtap="chooseImage" data-upname='sdosgImages'></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="weui-cells" wx:if="{{sdosgfileType==='video'}}">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <view class="weui-uploader">
              <view class="weui-uploader__hd">
                <view class="weui-uploader__title">视频上传</view>
                <view class="weui-uploader__info">{{sdosgVideos.length}}/3</view>
              </view>
              <view class="weui-uploader__bd">
                <view class="weui-uploader__files" id="uploadersdosgVideos">
                  <block wx:for="{{sdosgVideos}}" wx:key="*this" wx:for-index="idx" wx:for-item="itemName">
                    <view class="weui-uploader__file" catchlongpress='delData' data-target='sdosgVideos' data-index='{{idx}}' data-disasterindex='{{index}}' id="{{itemName}}">
                      <video class="weui-uploader__img" src="{{itemName}}" />
                    </view>
                  </block>
                </view>
                <view class="weui-uploader__input-box" wx:if="{{sdosgVideos.length<3}}">
                  <view class="weui-uploader__input" data-disasterindex='{{index}}' bindtap="chooseVideo" data-upname='sdosgVideos'></view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <view class="weui-cells" wx:if="{{sdosgfileType==='audio'}}">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <view class="weui-uploader">
              <view class="weui-uploader__hd">
                <view class="weui-uploader__title">录音上传</view>
                <view class="weui-uploader__info">{{sdosgAudios.length}}/5</view>
              </view>
              <view class="weui-uploader__bd">
                <view class="weui-uploader__files" id="uploadersdosgAudios">
                  <block wx:for="{{sdosgAudios}}" wx:key="*this" wx:for-index="idx" wx:for-item="itemName">
                    <view class="weui-uploader__file" id="{{itemName}}" data-target='sdosgAudios' data-index='{{idx}}' data-disasterindex='{{index}}' catchlongpress='delData'>
                      <audio src="{{itemName}}" name='录音{{idx+1}}' controls/>
                    </view>
                  </block>
                </view>
                <view wx:if="{{sdosgAudios.length<5}}">
                  <view class="button-sp-area">
                    <button class="weui-btn btnprimary" bindtap="chooseAudio" data-index='{{idx}}' data-disasterindex='{{index}}' wx:if="{{!sdosgisRecoding}}" data-upname='sdosgAudios'>点击开始录音</button>
                    <button class="weui-btn" type="warn" bindtap="stopAudio" data-index='{{idx}}' data-disasterindex='{{index}}' wx:if="{{sdosgisRecoding}}" data-upname='sdosgAudios' plain="true">点击停止录音</button>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>

    <view>
      <view class="weui-cells__title">
        说明本次地震构造特征的相关图件
      </view>
      <radio-group bindchange="pictureArrayfileTypeChange" data-disasterindex='{{index}}'>
        <view class="flex_box">
          <view class="flex_item">
            <label class="{{pictureArrayfileType==='image'?'active':''}}">
              <radio value='image' checked='{{pictureArrayfileType==="image"}}'>照片</radio>
            </label>
          </view>
          <view class="flex_item">
            <label class="{{pictureArrayfileType==='video'?'active':''}}">
              <radio value='video' checked='{{pictureArrayfileType==="video"}}'>视频</radio>
            </label>
          </view>
          <view class="flex_item">
            <label class="{{pictureArrayfileType==='audio'?'active':''}}">
              <radio value='audio' checked='{{pictureArrayfileType==="audio"}}'>录音</radio>
            </label>
          </view>
        </view>
      </radio-group>
      <view class="weui-cells" wx:if="{{pictureArrayfileType==='image'}}">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <view class="weui-uploader">
              <view class="weui-uploader__hd">
                <view class="weui-uploader__title">图片上传</view>
                <view class="weui-uploader__info">{{pictureArrayImages.length}}/9</view>
              </view>
              <view class="weui-uploader__bd">
                <view class="weui-uploader__files" id="uploaderpictureArrayImages">
